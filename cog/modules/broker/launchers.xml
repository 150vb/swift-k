<project name="Launchers" default="create" basedir=".">
	<target name="create">

	  <ant antfile="${main.buildfile}" target="example.launcher">
		<property name="launcher-name" value="cog-dynamic-broker"/>
		<property name="class-name"  value="org.globus.cog.broker.examples.DynamicBrokering"/>
		<property name="launcher-dir" value="examples"/>
	  </ant>

	  <!-- Copy the adv directory to the dist/bin/examples directory: required by broker examples -->
	  <copy todir="${dist.dir}/bin/examples/adv">
	    <fileset dir="./adv"/>
	  </copy>

	</target>
	<target name="webstart">
	  <ant antfile="${main.buildfile}" target="webstart.launcher">
		<property name="launcher-name" value="hierarchical-dag-visualizer"/>
		<property name="class-name"    value="org.globus.cog.core.examples.taskgraph.HierarchicalDAGVisualizer"/>
		<property name="display-name" value="Hierarchical DAG Visualizer"/>
	  </ant>

	</target>
</project>
