<project name="Java CoG Kit --Test" default="tests" basedir=".">
	<property file="project.properties"/>
	<property name="cog.dir"		value="${basedir}/../../"/>
	<property name="main.buildfile"	value="${cog.dir}/mbuild.xml"/>
	<property name="dist.dir" 		value="${cog.dir}/modules/${module.name}/dist/${module.name}-${version}"/>
	<property name="build.dir" 		value="${cog.dir}/modules/${module.name}/build"/>

    <property name="html.reports"      value="."/>
    <path id="classpath">
	<fileset dir="${dist.dir}/lib">
	    <include name="*.jar"/>
	</fileset>
    </path>

    <!-- =================================================================== -->
    <!--Tests Targets -->
    <!-- =================================================================== -->
    <target name="general">
	<java classname="org.globus.cog.test.Launcher"
            classpathref="classpath" 
	    fork="yes">
	    <sysproperty key="DEBUG_LEVEL" value="0"/> 

	    <arg line="general"/>
	    <arg line="machines.txt"/>
	    <arg line="${output.dir}"/>
	    <arg line="${output.prefix}"/>
	</java>
    </target>


    <target name="ftp">
	<java classname="org.globus.cog.test.Launcher"
            classpathref="classpath" 
	    fork="yes">
	    <sysproperty key="DEBUG_LEVEL" value="0"/> 
	    <arg line="gridftp"/>
	    <arg line="machines.txt"/>
	    <arg line="${output.dir}"/>
	    <arg line="${output.prefix}"/>
	</java>
    </target>

    <target name="gram">
	<java classname="org.globus.cog.test.Launcher"
            classpathref="classpath" 
	    fork="yes">
	    <sysproperty key="DEBUG_LEVEL" value="0"/> 
	    <arg line="gram"/>
	    <arg line="machines.txt"/>
	    <arg line="${output.dir}"/>
	    <arg line="${output.prefix}"/>
	</java>
    </target>

  <target name="thirdparty">
    <java classname="org.globus.cog.test.ThirdPartyServerTest"
          classpathref="classpath" 
	  fork="yes">
   
      <arg line="${from}"/>
      <arg line="${to}"/>
    </java>
  </target>

    <!-- =================================================================== -->
    <!-- Help                                                           -->
    <!-- =================================================================== -->
  
    <target name="help">
	<echo>

--------------------------------------------------------------
help - prints out this help message
--------------------------------------------------------------


  ftp    - tests the ftp package. Detailed test

  gram    - tests the gram package. Detailed test

  general    - tests the GRAM AND GRIDFTP

  thirdparty - tests if the server supports third party feature.

	</echo>
    </target>
</project>