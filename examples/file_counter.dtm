// a two-step workflow that essentially does 
// ls "/bin" | wc

type file {}

(file f) ls (string s) {
    app {
        ls s stdout=@filename(f);
    }
}

(file c) wc (file f) {
    app {
        wc stdin=@filename(f) stdout=@filename(c);
    }
}

file list, count;
list = ls("/bin");
count = wc(list);
