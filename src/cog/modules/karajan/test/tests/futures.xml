<karajan>
	<map>
		<map:entry key="name" value="futures"/>
		<map:entry key="test">
			<element arguments="">
				<element name="gen" arguments="">
					<for name="i">
						<range from="0" to="10"/>

						<variable>i</variable>
					</for>
				</element>
				<element name="con" arguments="values">
					<sum>
						<for name="i" in="{values}">
							<variable>i</variable>
						</for>
					</sum>
				</element>
				
				<element name="delayed">
					<wait delay="10"/>
					<string>Bla</string>
				</element>
			
				<set name="values">
					<futureIterator>
						<gen/>
					</futureIterator>
				</set>
				
				<set name="bla">
					<future>
						<delayed/>
					</future>
				</set>
				
				<list>
					<con values="{values}"/>
					<variable>bla</variable>
				</list>
			</element>
		</map:entry>
	
		<map:entry key="expected-result">
			<list>
				<number>55</number>
				<string>Bla</string>
			</list>
		</map:entry>
	</map>
</karajan>
