<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="file">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:schema>
  </types>
  <element name="echo_array" arguments="t,s">
    <vdl:typecheck argname="t" var="{t}" type="file"/>
    <vdl:typecheck argname="s" var="{s}" type="string" isArray="true"/>
    <vdl:execute>
      <vdl:tr>echo</vdl:tr>
      <vdl:stagein var="{s}"/>
      <vdl:stageout var="{t}"/>
      <vdl:arguments>
        <vdl:getfieldvalue var="{s}" path="[0]"/>	
        <vdl:getfieldvalue var="{s}" path="[1]"/>	
        <vdl:getfieldvalue var="{s}" path="[2]"/>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{t}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{t}"/>
  </element>

  <set name="greetings">
    <vdl:new type="string" dbgname="greetings" isArray="true">
      <argument name="value">
        <list>
          <vdl:new value="&quot;how&quot;"/>
          <vdl:new value="&quot;are&quot;"/>
          <vdl:new value="&quot;you&quot;"/>
        </list>
      </argument>
    </vdl:new>
  </set>
  <set name="hw">
    <vdl:new type="file" dbgname="hw">
      <vdl:mapping descriptor="concurrent_mapper">
        <vdl:parameter name="prefix" value="hw-f99c2036-2284-4f0a-b25b-237bde509b9c"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <echo>
    		    <parallel>
    		      <variable>hw</variable>
    		      <variable>greetings</variable>
    		    </parallel>
    		  </echo>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
