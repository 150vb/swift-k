<program xmlns="http://www.griphyn.org/2006/08/vdl"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema xmlns="http://www.griphyn.org/2006/08/vdl" targetNamespace="http://www.griphyn.org/2006/08/vdl">
     <xs:simpleType name="file">
       <xs:restriction base="xs:string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="echo_array">
    <output name="t" type="file"/>
    <input name="s" type="string" isArray="true"/>
    <binding>
      <application>
        <executable>echo</executable>
        <argument>s[0]</argument>
        <argument>s[1]</argument>
        <argument>s[2]</argument>
        <stdout><function name="filename">
        <argument>
          t
        </argument></function></stdout>
      </application>
    </binding>
  </procedure>
  <variable name="greetings" type="string" isArray="true">
    <array>
      <element>&quot;how&quot;</element>
      <element>&quot;are&quot;</element>
      <element>&quot;you&quot;</element>
    </array>
  </variable>
  <call proc="echo">
    <output>hw</output>
    <input>greetings</input>
  </call>
  <variable name="hw" type="file"/>
</program>
