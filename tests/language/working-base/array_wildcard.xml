<program xmlns="http://ci.uchicago.edu/swift/2007/07/swiftscript"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema targetNamespace="http://ci.uchicago.edu/swift/2007/07/swiftscript">
     <xs:simpleType name="file">
       <xs:restriction base="xs:string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="echo_wildcard">

      <output 
    name="t" type="file"

     xsi:nil="true" />

      <input 
    name="s" type="string" isArray="true"

     xsi:nil="true" />
    <binding>
      <application>
        <executable>echo</executable>
        <stdout><function name="filename">
          <variableReference>t</variableReference></function></stdout><arraySubscript>
         <variableReference>s</variableReference>
         <stringConstant>*</stringConstant>
        </arraySubscript>  </application>
    </binding>
  </procedure>
  <variable name="greetings" type="string" isArray="true">
    <array>
      <stringConstant>how</stringConstant><stringConstant>are</stringConstant><stringConstant>you</stringConstant>
    </array>
  </variable>
  <variable name="hw" type="file" xsi:nil="true"/>
  <call proc="echo">
    <output><variableReference>hw</variableReference></output>
    <input><variableReference>greetings</variableReference></input>
  </call>
</program>
