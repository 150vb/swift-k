<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="file">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:schema>
  </types>
  <element name="echo" arguments="t" optargs="s">
    <default name="s">
      <vdl:new type="string" value="&quot;hello world&quot;"/>
    </default>
    <vdl:typecheck argname="t" var="{t}" type="file"/>
    <vdl:typecheck argname="s" var="{s}" type="string"/>
    <vdl:execute>
      <vdl:tr>echo</vdl:tr>
      <vdl:stagein var="{s}"/>
      <vdl:stageout var="{t}"/>
      <vdl:arguments>
        <vdl:getfieldvalue var="{s}"/>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{t}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{t}"/>
  </element>

  <set name="hw1">
    <vdl:new type="file" dbgname="hw1">
      <vdl:mapping descriptor="concurrent_mapper">
        <vdl:parameter name="prefix" value="hw1-84c1ed3e-d749-4e42-bd3b-24f84269abb6"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <set name="hw2">
    <vdl:new type="file" dbgname="hw2">
      <vdl:mapping descriptor="concurrent_mapper">
        <vdl:parameter name="prefix" value="hw2-02597095-5214-4450-8d46-68e1b027d88b"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <echo>
    		    <parallel>
    		      <variable>hw1</variable>
    		    </parallel>
    		  </echo>
    		  <echo>
    		    <parallel>
    		      <variable>hw2</variable>
    		      <argument name="s">
    		        <vdl:new value="&quot;hello again&quot;"/>
    		      </argument>
    		    </parallel>
    		  </echo>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
