<program xmlns="http://www.griphyn.org/2006/08/vdl"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema xmlns="http://www.griphyn.org/2006/08/vdl" targetNamespace="http://www.griphyn.org/2006/08/vdl">
     <xs:simpleType name="file">
       <xs:restriction base="xs:string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="echo">
    <output name="t" type="file"/>
    <input name="s" type="string" default="&quot;hello world&quot;"/>
    <binding type="app">
      <application>
        <executable>echo</executable>
        <argument>s</argument>
        <stdout><function name="filename">
        <argument>
          t
        </argument></function></stdout>
      </application>
    </binding>
  </procedure>
  <variable name="hw1" type="file"/>
  <variable name="hw2" type="file"/>
  <call proc="echo">
    <output>hw1</output>
  </call>
  <call proc="echo">
    <output>hw2</output>
    <input bind="s">&quot;hello again&quot;</input>
  </call>
</program>
