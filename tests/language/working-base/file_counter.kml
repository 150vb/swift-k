<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="file">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:schema>
  </types>
  <element name="ls" arguments="f,s">
    <vdl:typecheck argname="f" var="{f}" type="file"/>
    <vdl:typecheck argname="s" var="{s}" type="string"/>
    <vdl:execute>
      <vdl:tr>ls</vdl:tr>
      <vdl:stagein var="{s}"/>
      <vdl:stageout var="{f}"/>
      <vdl:arguments>
        <vdl:getfieldvalue var="{s}"/>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{f}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{f}"/>
  </element>

  <element name="wc" arguments="c,f">
    <vdl:typecheck argname="c" var="{c}" type="file"/>
    <vdl:typecheck argname="f" var="{f}" type="file"/>
    <vdl:execute>
      <vdl:tr>wc</vdl:tr>
      <vdl:stagein var="{f}"/>
      <vdl:stageout var="{c}"/>
      <vdl:arguments>
      </vdl:arguments>
      <vdl:stdin>
        <vdl:filename var="{f}"/>	
      </vdl:stdin><vdl:stdout>
        <vdl:filename var="{c}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{c}"/>
  </element>

  <set name="list">
    <vdl:new type="file" dbgname="list">
      <vdl:mapping descriptor="concurrent_mapper">
        <vdl:parameter name="prefix" value="list-6cc485fc-e991-4eba-8777-258610ce63d3"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <set name="count">
    <vdl:new type="file" dbgname="count">
      <vdl:mapping descriptor="concurrent_mapper">
        <vdl:parameter name="prefix" value="count-af570e5f-c60c-4449-9252-436d84388e58"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <ls>
    		    <parallel>
    		      <variable>list</variable>
    		      <vdl:new value="&quot;*.txt&quot;"/>
    		    </parallel>
    		  </ls>
    		  <wc>
    		    <parallel>
    		      <variable>count</variable>
    		      <variable>list</variable>
    		    </parallel>
    		  </wc>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
