<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="messagefile">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:schema>
  </types>
  <element name="greeting" arguments="t">
    <vdl:typecheck argname="t" var="{t}" type="messagefile"/>
    <vdl:execute>
      <vdl:tr>echo</vdl:tr>
      <vdl:stageout var="{t}"/>
      <vdl:arguments>
        <string>Hello, world!</string>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{t}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{t}"/>
  </element>

  <set name="outfile">
    <vdl:new type="messagefile" dbgname="outfile">
      <vdl:mapping descriptor="single_file_mapper">
        <vdl:parameter name="file" value="hello.txt"/>
        <vdl:parameter name="input" value="false"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <greeting>
    		    <parallel>
    		      <variable>outfile</variable>
    		    </parallel>
    		  </greeting>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
