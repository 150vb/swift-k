<program xmlns="http://ci.uchicago.edu/swift/2007/07/swiftscript"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema targetNamespace="http://ci.uchicago.edu/swift/2007/07/swiftscript">
     <xs:simpleType name="messagefile">
       <xs:restriction base="string"/>
     </xs:simpleType>
     <xs:simpleType name="countfile">
       <xs:restriction base="string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="greeting">

      <output 
    name="t" type="messagefile"

     xsi:nil="true" />

      <input 
    name="s" type="string"

     xsi:nil="true" />
    <binding>
      <application>
        <executable>echo</executable>
        <stdout><function name="filename">
          <variableReference>t</variableReference></function></stdout><variableReference>s</variableReference>  </application>
    </binding>
  </procedure>
  <procedure name="countwords">

      <output 
    name="t" type="countfile"

     xsi:nil="true" />

      <input 
    name="f" type="messagefile"

     xsi:nil="true" />
    <binding>
      <application>
        <executable>wc</executable>
        <stdout><function name="filename">
          <variableReference>t</variableReference></function></stdout><stringConstant>-w</stringConstant><function name="filename">
          <variableReference>f</variableReference></function>  </application>
    </binding>
  </procedure>
  <dataset name="outfile" type="messagefile">
    <file name="q13greeting.txt"/>
  </dataset>
  <dataset name="c" type="countfile">
    <file name="count.txt"/>
  </dataset>
  <call proc="greeting">
    <output><variableReference>outfile</variableReference></output>
    <input><stringConstant>hello from Swift</stringConstant></input>
  </call>
  <call proc="countwords">
    <output><variableReference>c</variableReference></output>
    <input><variableReference>outfile</variableReference></input>
  </call>
</program>
