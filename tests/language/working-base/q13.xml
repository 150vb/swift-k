<program xmlns="http://www.griphyn.org/2006/08/vdl"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema xmlns="http://www.griphyn.org/2006/08/vdl" targetNamespace="http://www.griphyn.org/2006/08/vdl">
     <xs:simpleType name="messagefile">
       <xs:restriction base="xs:string"/>
     </xs:simpleType>
     <xs:simpleType name="countfile">
       <xs:restriction base="xs:string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="greeting">
    <output name="t" type="messagefile"/>
    <input name="s" type="string"/>
    <binding>
      <application>
        <executable>echo</executable>
        <argument>s</argument>
        <stdout><function name="filename">
        <argument>
          t
        </argument></function></stdout>
      </application>
    </binding>
  </procedure>
  <procedure name="countwords">
    <output name="t" type="countfile"/>
    <input name="f" type="messagefile"/>
    <binding>
      <application>
        <executable>wc</executable>
        <argument>&quot;-w&quot;</argument>
        <argument><function name="filename">
        <argument>
          f
        </argument></function></argument>
        <stdout><function name="filename">
        <argument>
          t
        </argument></function></stdout>
      </application>
    </binding>
  </procedure>
  <dataset name="outfile" type="messagefile">
    <file name="q13greeting.txt"/>
  </dataset>
  <dataset name="c" type="countfile">
    <file name="count.txt"/>
  </dataset>
  <call proc="greeting">
    <output>outfile</output>
    <input>&quot;hello from Swift&quot;</input>
  </call>
  <call proc="countwords">
    <output>c</output>
    <input>outfile</input>
  </call>
</program>
