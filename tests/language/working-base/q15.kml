<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="messagefile">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
      <xs:complexType name="details">
        <xs:sequence>
          <xs:element name="name" type="xs:string"/>
          <xs:element name="pies" type="xs:int"/>
        </xs:sequence>
      </xs:complexType>
    </xs:schema>
  </types>
  <element name="greeting" arguments="t,d">
    <vdl:typecheck argname="t" var="{t}" type="messagefile"/>
    <vdl:typecheck argname="d" var="{d}" type="details"/>
    <vdl:execute>
      <vdl:tr>echo</vdl:tr>
      <vdl:stagein var="{d}"/>
      <vdl:stageout var="{t}"/>
      <vdl:arguments>
        <string>Hello. Your names is</string>	
        <vdl:getfieldvalue var="{d}" path="name"/>	
        <string>and you have eaten</string>	
        <vdl:getfieldvalue var="{d}" path="pies"/>	
        <string>pies.</string>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{t}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{t}"/>
  </element>

  <set name="person">
    <vdl:new type="details" dbgname="person">
      <vdl:mapping descriptor="concurrent_mapper">
        <vdl:parameter name="prefix" value="person-486b27c8-f965-4cc7-93fb-7c489b62616e"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <vdl:setfieldvalue path="name" var="{person}" value="John"/>
  <vdl:setfieldvalue path="pies" var="{person}" value="3"/>
  <set name="outfile">
    <vdl:new type="messagefile" dbgname="outfile">
      <vdl:mapping descriptor="single_file_mapper">
        <vdl:parameter name="file" value="q15.txt"/>
        <vdl:parameter name="input" value="false"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <greeting>
    		    <parallel>
    		      <variable>outfile</variable>
    		      <variable>person</variable>
    		    </parallel>
    		  </greeting>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
