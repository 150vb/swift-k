<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="messagefile">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
      <xs:simpleType name="countfile">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:schema>
  </types>
  <element name="countwords" arguments="t,f">
    <vdl:typecheck argname="t" var="{t}" type="countfile"/>
    <vdl:typecheck argname="f" var="{f}" type="messagefile"/>
    <vdl:execute>
      <vdl:tr>wc</vdl:tr>
      <vdl:stagein var="{f}"/>
      <vdl:stageout var="{t}"/>
      <vdl:arguments>
        <string>-w</string>	
        <vdl:filename var="{f}"/>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{t}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{t}"/>
  </element>

  <set name="inputfile">
    <vdl:new type="messagefile" dbgname="inputfile">
      <vdl:mapping descriptor="single_file_mapper">
        <vdl:parameter name="file" value="q16.txt"/>
        <vdl:parameter name="input" value="true"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <set name="c">
    <vdl:new type="countfile" dbgname="c">
      <vdl:mapping descriptor="regexp_mapper">
        <vdl:parameter name="source">
          <vdl:filename var="{inputfile}"/>
        </vdl:parameter>
        <vdl:parameter name="match">
          <string>(.*)txt</string>
        </vdl:parameter>
        <vdl:parameter name="transform">
          <string>\1count</string>
        </vdl:parameter>
        <vdl:parameter name="input" value="false"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <countwords>
    		    <parallel>
    		      <variable>c</variable>
    		      <variable>inputfile</variable>
    		    </parallel>
    		  </countwords>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
