<program xmlns="http://www.griphyn.org/2006/08/vdl"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema xmlns="http://www.griphyn.org/2006/08/vdl" targetNamespace="http://www.griphyn.org/2006/08/vdl">
     <xs:simpleType name="messagefile">
       <xs:restriction base="xs:string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="greeting">
    <output name="t" type="messagefile"/>
    <input name="s" type="string"/>
    <binding type="app">
      <application>
        <executable>echo</executable>
        <argument>s</argument>
        <stdout><function name="filename">t</function></stdout>
      </application>
    </binding>
  </procedure>
  <dataset name="outfile" type="messagefile">
    <file name="hello20.txt"/>
  </dataset>
  <variable name="morning" type="boolean">true</variable>
  <if test="morning">
    <then>
      <call proc="greeting">
        <output>outfile</output>
        <input>&quot;good morning&quot;</input>
      </call>
    </then>
    <else>
      <call proc="greeting">
        <output>outfile</output>
        <input>&quot;good afternoon&quot;</input>
      </call>
    </else>
  </if>
</program>
