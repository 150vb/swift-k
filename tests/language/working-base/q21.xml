<program xmlns="http://ci.uchicago.edu/swift/2007/07/swiftscript"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema targetNamespace="http://ci.uchicago.edu/swift/2007/07/swiftscript">
     <xs:simpleType name="messagefile">
       <xs:restriction base="string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="greeting">

      <output 
    name="t" type="messagefile"

     xsi:nil="true" />

      <input 
    name="s" type="string"

    > 
    <stringConstant>hello</stringConstant>

      </input>
    <binding>
      <application>
        <executable>echo</executable>
        <stdout><function name="filename">
          <variableReference>t</variableReference></function></stdout><variableReference>s</variableReference>  </application>
    </binding>
  </procedure>
  <dataset name="english" type="messagefile">
    <file name="english2.txt"/>
  </dataset>
  <dataset name="french" type="messagefile">
    <file name="francais2.txt"/>
  </dataset>
  <call proc="greeting" src="line 12">
    <output><variableReference>english</variableReference></output>
  </call>
  <call proc="greeting" src="line 13">
    <output><variableReference>french</variableReference></output>
    <input bind="s"><stringConstant>bonjour</stringConstant></input>
  </call>
</program>
