<program xmlns="http://ci.uchicago.edu/swift/2007/07/swiftscript"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema targetNamespace="http://ci.uchicago.edu/swift/2007/07/swiftscript">
     <xs:simpleType name="messagefile">
       <xs:restriction base="string"/>
     </xs:simpleType>
     <xs:simpleType name="countfile">
       <xs:restriction base="string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="countwords">

      <output 
    name="t" type="countfile"

     xsi:nil="true" />

      <input 
    name="f" type="messagefile"

     xsi:nil="true" />
    <binding>
      <application>
        <executable>wc</executable>
        <stdout><function name="filename">
          <variableReference>t</variableReference></function></stdout><stringConstant>-w</stringConstant><function name="filename">
          <variableReference>f</variableReference></function>  </application>
    </binding>
  </procedure>
  <variable name="inputNames" type="string"><stringConstant>one.txt two.txt three.txt</stringConstant></variable>
  <variable name="outputNames" type="string"><stringConstant>one.count two.count three.count</stringConstant></variable>
  <dataset name="inputfiles" type="messagefile[]">
    <mapping descriptor="array_mapper">
      <param name="files"><variableReference>inputNames</variableReference></param>
    </mapping>
  </dataset>
  <dataset name="outputfiles" type="countfile[]">
    <mapping descriptor="array_mapper">
      <param name="files"><variableReference>outputNames</variableReference></param>
    </mapping>
  </dataset>
  <call proc="countwords">
    <output><arraySubscript>
     <variableReference>outputfiles</variableReference>
     <integerConstant>0</integerConstant>
    </arraySubscript></output>
    <input><arraySubscript>
     <variableReference>inputfiles</variableReference>
     <integerConstant>0</integerConstant>
    </arraySubscript></input>
  </call>
  <call proc="countwords">
    <output><arraySubscript>
     <variableReference>outputfiles</variableReference>
     <integerConstant>1</integerConstant>
    </arraySubscript></output>
    <input><arraySubscript>
     <variableReference>inputfiles</variableReference>
     <integerConstant>1</integerConstant>
    </arraySubscript></input>
  </call>
  <call proc="countwords">
    <output><arraySubscript>
     <variableReference>outputfiles</variableReference>
     <integerConstant>2</integerConstant>
    </arraySubscript></output>
    <input><arraySubscript>
     <variableReference>inputfiles</variableReference>
     <integerConstant>2</integerConstant>
    </arraySubscript></input>
  </call>
</program>
