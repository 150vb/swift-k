<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="file">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:schema>
  </types>
  <element name="echo" arguments="t,s">
    <vdl:typecheck argname="t" var="{t}" type="file"/>
    <vdl:typecheck argname="s" var="{s}" type="string"/>
    <vdl:execute>
      <vdl:tr>echo</vdl:tr>
      <vdl:stagein var="{s}"/>
      <vdl:stageout var="{t}"/>
      <vdl:arguments>
        <vdl:getfieldvalue var="{s}"/>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{t}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{t}"/>
  </element>

  <set name="greetings">
    <vdl:new type="string" dbgname="greetings" isArray="true">
      <argument name="value">
        <list>
          <vdl:new value="&quot;how&quot;"/>
          <vdl:new value="&quot;are&quot;"/>
          <vdl:new value="&quot;you&quot;"/>
        </list>
      </argument>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <parallelFor name="$">
    		    <vdl:getarrayfieldvalue path="" var="{greetings}"/>
    		      <set names="$$, g">
    		        <each items="{$}"/>
    		      </set>
    		      <set name="hw">
    		        <vdl:new type="file" dbgname="hw">
    		          <vdl:mapping descriptor="concurrent_mapper">
    		            <vdl:parameter name="prefix" value="hw-39864e7a-89eb-490c-a3ef-edcd836dcd16"/>
    		          </vdl:mapping>
    		        </vdl:new>
    		      </set>
    		      <parallel>
    		        <echo>
    		          <parallel>
    		            <variable>hw</variable>
    		            <variable>g</variable>
    		          </parallel>
    		        </echo>
    		      </parallel>
    		  </parallelFor>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
