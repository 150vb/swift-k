<program xmlns="http://ci.uchicago.edu/swift/2007/07/swiftscript"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema targetNamespace="http://ci.uchicago.edu/swift/2007/07/swiftscript">
     <xs:simpleType name="file">
       <xs:restriction base="string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="echo">

      <output 
    name="t" type="file"

     xsi:nil="true" />

      <input 
    name="s" type="string"

     xsi:nil="true" />
    <binding>
      <application>
        <executable>echo</executable>
        <stdout><function name="filename">
          <variableReference>t</variableReference></function></stdout><variableReference>s</variableReference>  </application>
    </binding>
  </procedure>
  <variable name="outputNames" type="string"><stringConstant>one two three</stringConstant></variable>
  <dataset name="outputFiles" type="file" isArray="true">
    <mapping descriptor="array_mapper">
      <param name="files"><variableReference>outputNames</variableReference></param>
    </mapping>
  </dataset>
  <foreach var="f" >
  <in><variableReference>outputFiles</variableReference></in>
  <body><call proc="echo">
      <output><variableReference>f</variableReference></output>
      <input><stringConstant>hello</stringConstant></input>
    </call></body>
  </foreach>
</program>
