<project>
  <import file="sys.xml"/>
  <import file="scheduler.xml"/>
  <import file="rlog.xml"/>
  <import file="vdl.k"/>
  <types>
    <xs:schema targetNamespace="http://www.griphyn.org/2006/08/vdl" xmlns="http://www.griphyn.org/2006/08/vdl" xmlns:xs="http://www.w3.org/2001/XMLSchema">
      <xs:simpleType name="file">
        <xs:restriction base="xs:string"/>
      </xs:simpleType>
    </xs:schema>
  </types>
  <element name="echo" arguments="t,s">
    <vdl:typecheck argname="t" var="{t}" type="file"/>
    <vdl:typecheck argname="s" var="{s}" type="string"/>
    <vdl:execute>
      <vdl:tr>echo</vdl:tr>
      <vdl:stagein var="{s}"/>
      <vdl:stageout var="{t}"/>
      <vdl:arguments>
        <vdl:getfieldvalue var="{s}"/>	
      </vdl:arguments>
      <vdl:stdout>
        <vdl:filename var="{t}"/>	
      </vdl:stdout>
    </vdl:execute>
    <vdl:closedataset var="{t}"/>
  </element>

  <set name="inputFiles">
    <vdl:new type="file" dbgname="inputFiles" isArray="true">
      <vdl:mapping descriptor="simple_mapper">
        <vdl:parameter name="pattern">
          <string>*</string>
        </vdl:parameter>
        <vdl:parameter name="input" value="true"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <set name="o">
    <vdl:new type="file" dbgname="o">
      <vdl:mapping descriptor="single_file_mapper">
        <vdl:parameter name="file" value="foo.out"/>
        <vdl:parameter name="input" value="false"/>
      </vdl:mapping>
    </vdl:new>
  </set>
  <restartLog>
  	<vdl:pre/>
  	<vdl:mains>
		<vdl:mainp>
		    <parallel>
    		  <echo>
    		    <parallel>
    		      <variable>o</variable>
    		      <variable>inputFiles</variable>
    		    </parallel>
    		  </echo>
	    	</parallel>
		</vdl:mainp>
	</vdl:mains>
	<vdl:post/>
  </restartLog>  
</project>
